@page "{productId:int}"
@model SjonnieLoper.Pages.Products.DetailsModel
@{
    ViewData["Title"] = "Details";
}
@if (Model.Message != null)
{
    <div class="alert alert-info">@Model.Message</div>
}

<h1>@Model.Whiskey.Name</h1>

<fieldset>
    <legend>
        @Html.DisplayNameForModel()
    </legend>
</fieldset>
