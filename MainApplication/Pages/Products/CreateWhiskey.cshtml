@page
@model SjonnieLoper.Pages.Products.CreateModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<form method="post">

    <div class="form-group">
        @Html.LabelFor(x => Model.Whiskey.WhiskeyType, htmlAttributes: new {@class = "control-label col-md-3"})
        <div class="col-md-6">
            @Html.DropDownListFor(x => Model.Whiskey.WhiskeyType,
                new SelectList(Model.RegisteredWhiskeyTypes, "Value", "Text"), htmlAttributes: new {@class = "form-control", id = "Country"})
            @Html.ValidationMessageFor(x => x.Whiskey.WhiskeyType, "", new {@class = "text-danger"})
        </div>


        <input type="hidden" asp-for="@Model.Whiskey.WhiskeyId">
        <label asp-for="@Model.Whiskey.Name"></label>
        <input asp-for="@Model.Whiskey.Name" class="form-control"/>
        <span class="text-danger" asp-validation-for="@Model.Whiskey.Name"></span>
        <label asp-for="@Model.Whiskey.Origin"></label>
        <input asp-for="@Model.Whiskey.Origin" class="form-control"/>
        <span class="text-danger" asp-validation-for="@Model.Whiskey.Origin"></span>
    </div>

    <button type="submit" class="btn btn-outline-primary">Confirm</button>
</form>