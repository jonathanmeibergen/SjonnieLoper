@page "{reservationId:int}"
@model SjonnieLoper.Pages.Reservations.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit order #@Model.Reservation.Id</h1>

<form method="post">
    <input type="hidden" asp-for="Reservation.Id">


    <div class="form-group">

        <select asp-for="productAddedID"
                asp-items="@(new SelectList(Model.RegisteredWhiskeys, "Value", "Text"))">
            
        </select>
        <label asp-for="Reservation.User.UserName"></label>
        <input asp-for="Reservation.User.UserName" class="form-control"/>
        <span class="text-danger" asp-validation-for="Reservation.User.UserName"></span>
        <label asp-for="Reservation.Orderdate"></label>
        <input asp-for="Reservation.Orderdate" class="form-control"/>
        <span class="text-danger" asp-validation-for="Reservation.Orderdate"></span>
    </div>

    <button type="submit" class="btn btn-outline-primary">Confirm</button>
</form>

