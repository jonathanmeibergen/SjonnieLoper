@page
@model SjonnieLoper.Pages.Reservations.foo

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
</head>
<body>
<h1>Create reservation</h1>

<form method="post">
    <input type="hidden" asp-for="@Model.Reservation.Id">
        <label asp-for="Reservation.Products"></label>
           <select asp-for="productAddedID"
                   asp-items="@(new SelectList(Model.RegisteredWhiskeys, "Value", "Text"))">
           </select>
    <div class="form-group">
        <label asp-for="@Model.Reservation.Customer"></label>
        <input asp-for="@Model.Reservation.Customer" class="form-control"/>
        <span class="text-danger" asp-validation-for="Reservation.Customer"></span>
        
        <label asp-for="@Model.Reservation.Orderdate"></label>
        <input asp-for="@Model.Reservation.Orderdate" class="form-control"/>
        <span class="text-danger" asp-validation-for="Reservation.Orderdate"></span>
        
    </div>

    <button type="submit" class="btn btn-outline-primary">Confirm</button>
</form>
</body>
</html>